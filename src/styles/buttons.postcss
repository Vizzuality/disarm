@import './settings.postcss';

.btn {
  border: 0;
  outline: 0;
  background: none;

  font-size: rem(18);
  text-transform: uppercase;

  cursor: pointer;

  &.-gray {
    padding: rem(15) rem(30);
    color: $color-5;
    background-color: $color-1;
  }

  &.-disabled {
    opacity: .3;
    cursor: default;
  }
}
